# ─── BASE DE DONNEES ─────────────────────────────────────────────
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/argos_db?schema=public"

# ─── NEXTAUTH ────────────────────────────────────────────────────
NEXTAUTH_SECRET=
NEXTAUTH_URL="http://localhost:3000"

# ─── OPENSKY NETWORK (trafic aerien) ────────────────────────────
# Inscription : https://opensky-network.org
OPENSKY_CLIENT_ID=
OPENSKY_CLIENT_SECRET=

# ─── AIS (trafic maritime) ───────────────────────────────────────
# Inscription : https://aisstream.io/authenticate
AISSTREAM_API_KEY=

# ─── ZONE D'OPERATIONS (OPEX) ───────────────────────────────────
OPERATION_BBOX_LAMIN="25"
OPERATION_BBOX_LAMAX="72"
OPERATION_BBOX_LOMIN="-30"
OPERATION_BBOX_LOMAX="45"

# ─── OPENCELLID (antennes relais) ───────────────────────────────
# Inscription : https://opencellid.org/register
OPENCELLID_API_KEY=

# ─── MISTRAL AI (LLM souverain francais) ────────────────────────
# Cle API : https://console.mistral.ai/api-keys
MISTRAL_API_KEY=

# ─── OLLAMA (LLM auto-heberge, fallback) ────────────────────────
# https://ollama.com
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral

# ─── ACLED (conflits armes — OAuth2) ────────────────────────────
# Inscription : https://acleddata.com/user/register
# Authentification par email/password (token OAuth2 genere automatiquement)
ACLED_EMAIL=
ACLED_PASSWORD=

# ─── NASA FIRMS (feux detectes par satellite) ───────────────────
# Cle MAP_KEY : https://firms.modaps.eosdis.nasa.gov/api/area/
NASA_FIRMS_API_KEY=

# ─── CLOUDFLARE RADAR (pannes internet) ─────────────────────────
# Bearer token : https://developers.cloudflare.com/radar/
CLOUDFLARE_RADAR_TOKEN=

# ─── COPERNICUS / SENTINEL (imagerie satellite) ─────────────────
# Application OAuth : https://dataspace.copernicus.eu/
COPERNICUS_CLIENT_ID=
COPERNICUS_CLIENT_SECRET=

# ─── UPSTASH REDIS (cache cross-requetes, optionnel) ────────────
# https://console.upstash.com
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# ─── CHIFFREMENT (donnees au repos) ─────────────────────────────
# Min 16 caracteres, generer avec: openssl rand -hex 16
ARGOS_ENCRYPTION_KEY=

# ─── CESIUM ION (globe 3D, optionnel) ───────────────────────────
NEXT_PUBLIC_CESIUM_ION_TOKEN=
